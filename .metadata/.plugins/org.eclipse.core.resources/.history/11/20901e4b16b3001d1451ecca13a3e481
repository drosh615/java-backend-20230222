package chapter1.C_DataType;

/*
 * 데이터 타입
 * 각각의 데이터들은 자바에서 지정한 여러 종류의 타입이 존재
 * 기본적으로 정수형, 실수형, 문자형, 논리형이 존재
 * 추가적으로 참조형 데이터 타입
 * 
 * 일반적으로 특정한 데이터 타입으로 정의된 변수 혹은 상수는 
 * 같은 데이터 타입의 데이터로만 연산이 가능
 */

public class DataType {

	public static void main(String[] args) {
		// 정수 타입
		 
		/* byte type
		 * 1 byte (-128 ~ 127) 크기의 데이터를 가질 수 있는 데이터 타입
		 */
		byte byte1 = 127;
		// byte1 = 128; 초과하면 에러난다.
		
		/*
		 * short type
		 * 2 byte (-32,768 ~ 32,767) 크기의  데이터 "
		 */
		short short1 = 32767;
		// short1 = 32768; //타입 미스 매치
		
		/*
		 * **int type
		 * 4 byte (-2,147,483,648 ~ 2,147,483,647) 크기의 데이터 "
		 */
		int int1 = 2_147_483_647; // 천단위 콤마를 대신해서 _를 사용
		//int1 = 2_147_483_648; //정수 타입의 리터럴상수는 인트 범위까지만 가능하다.
		
		/*
		 * long type
		 * 8 byte (-2^63 ~ 2^63-1) 크기의 데이터 " 정수형
		 */
		long long1 = 12_147_463_167L; //정수형 리터럴상수가 인트 범위 초과 되니 "L"을 추가해서 롱타입으로
		
		// 실수 타입
		/*
		 * float type
		 * 4 byte (1.4 * 10^-45 ~ 3.4 * 10^38) 크기의  데이터를 가질 수 있는 실수형
		 */
		float float1 = 3.14F; //실수형 리터럴상수가 double 타입이라서 float 타입으로 지정
		// float은 소수점 6자리에서 오차가 발생한다.
		
		/*
		 * double type
		 * 8 byte (4.9 * 10^-324 ~ 1.8 * 10^308) 크기의 데이터 " 실수형
		 */
		double double1 = 3.1415;
		// double은 소수점 15자리에서 오차가 발생한다.
		
		// 문자 타입
		/*
		 * char type
		 * 2 byte (0 ~ 65,535) 크기의 데이터 " 문자형
		 * 문자(단어가 아닌) 하나를 저장 할 수 있는 공간
		 * 한문자를 표기할 때는 ' '으로 묶어서 표기한다.
		 */
		char char1 = 'a';
		char char2 = 97; //97은 a 와 같다.
		
		// 논리 타입 (백엔드에서 가장 많이 쓰인다)
		/*
		 * boolean type
		 * 1 byte (false, true) 크기의 데이터를 가질 수 있는 논리형 
		 */
		boolean boolean1 = true;
		boolean1 = false;
		// is--(--이다), has--(--를 갖다), flag(깃발)
		
		// 형 변환 (Type casting)
	}

}








