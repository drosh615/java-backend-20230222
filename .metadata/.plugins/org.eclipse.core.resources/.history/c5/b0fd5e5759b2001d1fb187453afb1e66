package chapter1.A_Variable;

// 이 뒤로 한 줄 주석
/* 이 사이를 부분 주석 */
/*
 * /*+ 엔터를하면 자동. 여러줄 주석
 */
//내용을 쓰고 컨트롤 + / 를 누르면 자동 주석
// 코드를 작성하고 나면 반드시!! 저장을 해야한다. 컨트롤+s 
/*
 *  1. 변수
 *  모든 프로그래밍 언어는  데이터를 보관할 수 있는 변수가 존재한다. 
 *  	(데이터를 담을 수 있는 열려있는 상자)
 *  변수는 반드시 선언 후 초기화 해야 사용 가능
 *  	(선언: 사용할 변수를 만드는 행위)
 *  	(초기화: 변수에 초기 데이터를 저장하는 행위)
 */



public class Variable {

	/*
	 *  main 메서드: 실행시 실행되는 메서드
	 *  { } : 코드 블록. 여러 줄의 코드를 하나로 묶어주는 역할
	 */
	public static void main(String[] args) {
		/*
		 * 변수 선언 방법
		 * 데이터 타입(담을 상자를 선택) 변수명(뭐가 들어있는지 알 수 있는 네이밍) ;
		 */
		int numerVariable;
		
		/*
		 * 변수 초기화 방법
		 * 변수명 = 데이터 ;
		 */
		numerVariable = 10;
		
		//선언과 동시에 초기화
		char charaterVariable = 'a';
		int number1=10, number2=20; // 이건 개발환경에서는 별로 좋지 못하다. 우선순위에 따라 각각 선언한다.
		
		/*
		 * 변수 명명 규칙
		 * 1. 첫자리가 숫자는 안된다.
		 * 2. 연산자로 쓰지 않는 특수문자만 사용가능. 대부분 연산자로 쓰기때문에 비추
		 * 3. 같은 코드 블록내에 이미 선언한 변수명은 사용 불가능. (타입이 다르더라도)
		 */
	}

}
